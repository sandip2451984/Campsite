{% extends "CampsiteAdminBundle::layout.html.twig" %}
{% block admin_content %}
<h1>Events</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Userid</th>
            <td>{{ entity.userId }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Fromdate</th>
            <td>{{ entity.fromDate|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Todate</th>
            <td>{{ entity.toDate|date('Y-m-d H:i:s') }}</td>
        </tr>

        <tr>
            <th>Address</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ entity.city }}</td>
        </tr>
        <tr>
            <th>State</th>
            <td>{{ entity.state }}</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>{{ entity.country }}</td>
        </tr>
        <tr>
            <th>Zipcode</th>
            <td>{{ entity.zipcode }}</td>
        </tr>
        <tr>
            <th>Isactive</th>
            <td>{{ entity.isActive }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updatedat</th>
            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('events',{'communityId':communityId}) }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('events_edit', { 'id': entity.id ,'communityId':communityId}) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('events_delete', { 'id': entity.id,'communityId':communityId }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btnF">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}