{% extends "CampsiteAdminBundle::layout.html.twig" %}
{% block admin_content %}
<h1>Session list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('session_show', { 'id': entity.id ,'communityId':communityId}) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('session_show', { 'id': entity.id,'communityId':communityId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('session_edit', { 'id': entity.id,'communityId':communityId }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock %}
