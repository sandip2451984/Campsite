{% extends "CampsiteAdminBundle::layout.html.twig" %}
{% block admin_content %}
<h1>Groups list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>City</th>
            <th>Location</th>
            <th>Isactive</th>
            <th>Createdat</th>
            <th>Updatedat</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('groups_show', { 'id': entity.id,'communityId':communityId }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.city }}</td>
            <td>{{ entity.location }}</td>
            <td>{{ entity.isActive }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('groups_show', { 'id': entity.id,'communityId':communityId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('groups_edit', { 'id': entity.id,'communityId':communityId }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock %}
